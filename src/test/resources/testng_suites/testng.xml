<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Master Test Suite" verbose="1">
    <!-- API Test Suite -->
    <test name="API Tests - Annotation-Based" preserve-order="true">
        <classes>
            <!-- Read-only GET operations - no API key restrictions -->
            <class name="com.solvd.carinatesting.tests.api.annotation.GetBreedsTest"/>
            <class name="com.solvd.carinatesting.tests.api.annotation.GetImageTest"/>
            <class name="com.solvd.carinatesting.tests.api.annotation.SearchImagesTest"/>

            <!-- Favourites read operations - requires API key -->
            <class name="com.solvd.carinatesting.tests.api.annotation.GetFavouritesTest"/>

            <!-- Favourites write operations - requires paid API key (may skip with free key) -->
            <class name="com.solvd.carinatesting.tests.api.annotation.PostFavouriteTest"/>
            <class name="com.solvd.carinatesting.tests.api.annotation.DeleteFavouriteTest"/>
        </classes>
    </test>

    <test name="API Tests - Declarative" preserve-order="true">
        <classes>
            <!-- Read-only GET operations - no API key restrictions -->
            <class name="com.solvd.carinatesting.tests.api.declarative.DeclarativeGetBreedsTest"/>
            <class name="com.solvd.carinatesting.tests.api.declarative.DeclarativeGetImageTest"/>
            <class name="com.solvd.carinatesting.tests.api.declarative.DeclarativeSearchImagesTest"/>

            <!-- Favourites read operations - requires API key -->
            <class name="com.solvd.carinatesting.tests.api.declarative.DeclarativeGetFavouritesTest"/>

            <!-- Favourites write operations - requires paid API key (may skip with free key) -->
            <class name="com.solvd.carinatesting.tests.api.declarative.DeclarativePostFavouriteTest"/>
            <class name="com.solvd.carinatesting.tests.api.declarative.DeclarativeDeleteFavouriteTest"/>
        </classes>
    </test>

    <!-- Webpage Test Suite -->
    <test name="Webpage Tests - Search Functionality" preserve-order="true">
        <classes>
            <!-- Basic search functionality -->
            <class name="com.solvd.carinatesting.tests.webpage.MainSearchTest"/>
            <class name="com.solvd.carinatesting.tests.webpage.SearchResultsNotEmptyTest"/>

            <!-- Edge case search tests -->
            <class name="com.solvd.carinatesting.tests.webpage.EmptySearchTest"/>
            <class name="com.solvd.carinatesting.tests.webpage.SearchSpecialCharactersTest"/>
        </classes>
    </test>

    <test name="Webpage Tests - Navigation" preserve-order="true">
        <classes>
            <!-- Homepage section navigation -->
            <class name="com.solvd.carinatesting.tests.webpage.FanFavoriteNavigationTest"/>
            <class name="com.solvd.carinatesting.tests.webpage.InTheaterSectionTest"/>
            <class name="com.solvd.carinatesting.tests.webpage.Top10IMDbSectionTest"/>
            <class name="com.solvd.carinatesting.tests.webpage.TopBoxOfficeTest"/>
        </classes>
    </test>

    <test name="Webpage Tests - Content Verification" preserve-order="true">
        <classes>
            <!-- Movie and celebrity content validation -->
            <class name="com.solvd.carinatesting.tests.webpage.MovieMetadataTest"/>
            <class name="com.solvd.carinatesting.tests.webpage.PopularCelebrityTest"/>
        </classes>
    </test>
    
</suite>
