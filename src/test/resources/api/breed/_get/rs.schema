{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "integer" },
      "name": { "type": "string" },
      "temperament": { "type": ["string", "null"] },
      "origin": { "type": ["string", "null"] },
      "weight": {
        "type": "object",
        "properties": {
          "imperial": { "type": "string" },
          "metric": { "type": "string" }
        },
        "required": ["imperial", "metric"]
      },
      "height": {
        "type": "object",
        "properties": {
          "imperial": { "type": "string" },
          "metric": { "type": "string" }
        },
        "required": ["imperial", "metric"]
      }
    },
    "required": ["id", "name"],
    "additionalProperties": true
  }
}